<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabfragment.HomeFragment">

    <!-- Buttons layout TODO: design better -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <!-- Social button -->
        <ImageButton
            android:id="@+id/social_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_person_black_24dp" />
            />

        <!-- Store button -->
        <ImageButton
            android:id="@+id/store_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_store_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="100dp"
        app:layout_constraintBottom_toBottomOf=""
        app:layout_constraintEnd_toEndOf=""
        app:layout_constraintStart_toStartOf=""
        app:layout_constraintTop_toTopOf=""
        >

        <include
            layout="@layout/character_stats"
            android:id="@+id/character_stats"
            android:layout_width="410dp"
            android:layout_height="@dimen/level_square_margin"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>